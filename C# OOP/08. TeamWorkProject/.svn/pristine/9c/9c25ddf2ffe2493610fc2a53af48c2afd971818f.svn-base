using System;
using System.Collections.Generic;

namespace ESchoolDiary
{
    public static class ESchoolDiaryData
    {
        // Fields
        private static HashSet<Student> students = new HashSet<Student>();
        private static List<Teacher> teachers = new List<Teacher>();
        private static List<Subject> subjects = new List<Subject>();
        private static List<SchoolClass> schoolClasses = new List<SchoolClass>();
        private static List<MainTeacher> mainTeachers = new List<MainTeacher>();
        private static HashSet<Mark> marks = new HashSet<Mark>();
        private static HashSet<Note> notes = new HashSet<Note>();

        // Properties
        public static HashSet<Student> Students
        {
            get { return students; }
            set { students = value; }
        }

        public static List<Teacher> Teachers
        {
            get { return teachers; }
            set { teachers = value; }
        }

        public static List<Subject> Subjects
        {
            get { return subjects; }
            set { subjects = value; }
        }

        public static List<SchoolClass> SchoolClasses
        {
            get { return schoolClasses; }
            set { schoolClasses = value; }
        }

        public static List<MainTeacher> MainTeachers
        {
            get { return mainTeachers; }
            set { mainTeachers = value; }
        }

        public static HashSet<Mark> Marks
        {
            get { return marks; }
            set { marks = value; }
        }

        public static HashSet<Note> Notes
        {
            get { return notes; }
            set { notes = value; }
        }
    }
}