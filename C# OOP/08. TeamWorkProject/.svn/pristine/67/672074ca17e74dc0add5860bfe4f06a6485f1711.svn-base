using System;
using System.Collections.Generic;

namespace ESchoolDiary
{
    public static class ESchoolDiaryData
    {
        // Fields
        private static List<Student> students = new List<Student>();
        private static List<Teacher> teachers = new List<Teacher>();
        private static List<Subject> subjects = new List<Subject>();
        private static List<SchoolClass> schoolClasses = new List<SchoolClass>();
        private static List<MainTeacher> mainTeachers = new List<MainTeacher>();
        private static List<Mark> marks = new List<Mark>();

        // Properties
        public static List<Student> Students
        {
            get
            {
                return students;
            }
            set
            {
                students = value;
            }
        }

        public static List<Teacher> Teachers
        {
            get
            {
                return teachers;
            }
            set
            {
                teachers = value;
            }
        }

        public static List<Subject> Subjects
        {
            get
            {
                return subjects;
            }
            set
            {
                subjects = value;
            }
        }

        public static List<SchoolClass> SchoolClasses
        {
            get
            {
                return schoolClasses;
            }
            set
            {
                schoolClasses = value;
            }
        }

        public static List<MainTeacher> MainTeachers
        {
            get
            {
                return mainTeachers;
            }
            set
            {
                mainTeachers = value;
            }
        }

        public static List<Mark> Marks
        {
            get
            {
                return marks;
            }
            set
            {
                marks = value;
            }
        }

       public static Student GetStudent(string id)
        {
            foreach (Student student in ESchoolDiaryData.Students)
            {
                if (student.Pin.ToString().Equals(id))
                {
                    if (student.Pin.ToString() == id)
                    {
                        return student;
                    }
                }
            }
            return null;
        }
    }
}